                <div class="form-group col-sm-12">
                    <label asp-for="PersonalInformation.ImageFile.Content" class="control-label"></label>
                    <input asp-for="PersonalInformation.ImageFile.Content" type="file" name="image" class="form-control" />
                    <span asp-validation-for="PersonalInformation.ImageFile.Content" class="text-danger"></span>
                </div>


