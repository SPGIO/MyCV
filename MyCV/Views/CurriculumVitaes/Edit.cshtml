                    <label asp-for="PersonalInformation.Street" class="control-label"></label>
                    <input asp-for="PersonalInformation.Street" class="form-control" />
                    <span asp-validation-for="PersonalInformation.Street" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
