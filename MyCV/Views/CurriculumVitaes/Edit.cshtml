                <div class="form-group col-sm-12 col-md-4">
                    <label asp-for="PersonalInformation.Zip" class="control-label"></label>
                    <input asp-for="PersonalInformation.Zip" class="form-control" />
                    <span asp-validation-for="PersonalInformation.Zip" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-12 col-md-8">
