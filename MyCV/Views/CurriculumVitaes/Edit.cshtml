                <div class="form-group col-sm-12">
                    <label asp-for="PersonalInformation.PhoneNumber" class="control-label"></label>
                    <input asp-for="PersonalInformation.PhoneNumber" class="form-control" />
                    <span asp-validation-for="PersonalInformation.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-12">
                    <label asp-for="PersonalInformation.Email" class="control-label"></label>
                    <input asp-for="PersonalInformation.Email" class="form-control" />
                    <span asp-validation-for="PersonalInformation.Email" class="text-danger"></span>
                </div>

                @* Image *@
                @*<div class="form-group col-sm-12">
            <label asp-for="PersonalInformation.Address.ImagePath" class="control-label"></label>
