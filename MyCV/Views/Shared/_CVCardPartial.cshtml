@model CurriculumVitae

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">test @*@Model.ApplicableCompany.Name*@</h5>
            <p class="card-text">@Model.ShortResumeWithThreeDots(100)</p>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item"><a asp-action="Details" asp-route-id="@Model.Id">View</a></li>
            <li class="list-group-item"><a asp-action="Edit" asp-route-id="@Model.Id">Edit</a></li>
            <li class="list-group-item"><a asp-action="Delete" asp-route-id="@Model.Id">Delete</a></li>
        </ul>
        <div class="card-footer text-muted">
            2 days ago
        </div>
    </div>